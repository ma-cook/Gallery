rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to images
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to collection preview images  
    match /collection_previews/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Full-res completed artwork - no public read access
    // Only accessible via signed URLs from cloud functions
    match /collection_fullres/{allPaths=**} {
      allow read: if false;
      allow write: if request.auth != null;
    }
    
    // Legacy collection path - allow public read for existing images
    match /collection/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload example images for their requests
    match /requests/examples/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

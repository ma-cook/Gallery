rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Images collection - allow all reads and writes
    match /images/{imageId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Settings collection - allow all reads and writes
    match /settings/{settingId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Collection group query support for admins to fetch all requests
    match /{path=**}/requests/{requestId} {
      // Allow admins to read all requests via collectionGroup query
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Users collection with requests subcollection
    match /users/{userId}/requests/{requestId} {
      // Admins can read all requests, users can read only their own
      allow read: if request.auth != null && 
                     (request.auth.token.admin == true || 
                      userId == request.auth.uid);
      
      // Users can only create requests in their own subcollection
      allow create: if request.auth != null && userId == request.auth.uid;
      
      // Only admins can update requests (for status changes)
      allow update: if request.auth != null && request.auth.token.admin == true;
      
      // Only admins can delete requests
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Collection subcollection for completed artwork
    match /users/{userId}/collection/{collectionId} {
      // Users can read their own collection, admins can read all
      allow read: if request.auth != null && 
                     (request.auth.token.admin == true || 
                      userId == request.auth.uid);
      
      // Only admins can create/update collection items
      allow create, update: if request.auth != null && request.auth.token.admin == true;
      
      // Only admins can delete collection items
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}